@model IEnumerable<FilmsStoreMvc.Models.Domain.Film>

@{
    ViewData["Title"] = "film";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>film</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Studio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CritiqueScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AudienceScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Directeur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActeurPrincipal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Studio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CritiqueScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AudienceScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Directeur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActeurPrincipal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
